<%- include('partials/layout', { title: title, script: script, body: `
<div class="text-center mb-8">
    <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-yellow-400 to-orange-500 bg-clip-text text-transparent">Industry News</h1>
    <p class="text-lg text-gray-300 mb-4">Find breaking news and turn it into viral content before anyone else.</p>
    <a href="/" class="text-blue-400 hover:text-blue-300 transition-colors">&larr; Back to Dashboard</a>
</div>
<div class="max-w-4xl mx-auto">
    <div class="bg-white/5 rounded-xl p-6 backdrop-blur-sm border border-white/20 shadow-lg">
        <div class="mb-6">
            <button id="scan-news-btn" class="w-full flex items-center justify-center gap-2 bg-blue-500 hover:bg-blue-600 px-6 py-3 rounded-lg font-semibold transition-colors disabled:opacity-50" data-icon="search" data-original-text="Scan for More News">
                <span class="btn-icon"><i data-lucide="search" class="w-5 h-5"></i></span>
                <span class="btn-text">Scan for More News</span>
            </button>
        </div>
        <div id="news-error" class="text-red-400 text-center mt-4 hidden"></div>
        <div id="news-loader" class="text-center p-4 hidden"><i data-lucide="refresh-cw" class="w-8 h-8 animate-spin mx-auto text-blue-400"></i></div>
        <div id="news-articles-container" class="space-y-4"></div>
    </div>
</div>
` }) %>
