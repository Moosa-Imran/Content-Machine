<%- include('partials/head') %>

    <%- include('partials/header') %>

        <main class="flex-grow pt-24 px-4 sm:px-6 lg:px-8 pb-8">
            <div class="max-w-5xl mx-auto">
                <!-- Page Header -->
                <div class="flex flex-col sm:flex-row justify-between items-center gap-4 mb-8">
                    <div>
                        <h1
                            class="text-3xl font-bold bg-gradient-to-r from-yellow-500 to-orange-500 dark:from-yellow-400 dark:to-orange-400 bg-clip-text text-transparent">
                            Industry News</h1>
                        <p class="mt-1 text-slate-500 dark:text-slate-400">Find breaking news and turn it into viral
                            content.</p>
                    </div>
                    <div class="flex items-center gap-4">
                        <button id="custom-search-btn"
                            class="relative flex items-center gap-2 px-4 py-2 text-sm font-medium text-slate-600 dark:text-slate-300 bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700 rounded-lg focus:outline-none">
                            <i data-lucide="sliders-horizontal" class="w-4 h-4"></i>
                            Filters
                            <span id="filter-indicator" class="hidden absolute -top-1 -right-1 block h-3 w-3 rounded-full bg-primary-500 ring-2 ring-white dark:ring-slate-900"></span>
                        </button>
                        <button id="shuffle-news-btn"
                            class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 dark:focus:ring-offset-slate-950 disabled:opacity-50 disabled:cursor-not-allowed"
                            data-icon="shuffle" data-original-text="Shuffle News">
                            <span class="btn-icon"><i data-lucide="shuffle" class="w-4 h-4"></i></span>
                            <span class="btn-text">Shuffle News</span>
                        </button>
                    </div>
                </div>
                
                <!-- AI Validation Toggle -->
                <div class="flex items-center justify-center mb-6 bg-slate-100 dark:bg-slate-800/50 p-4 rounded-lg gap-4">
                    <label for="validate-news-toggle" class="flex items-center cursor-pointer">
                        <span class="mr-3 text-sm font-medium text-slate-700 dark:text-slate-300">Validate News with AI</span>
                        <div class="relative">
                            <input type="checkbox" id="validate-news-toggle" class="sr-only peer" checked>
                            <div class="block bg-slate-200 dark:bg-slate-700 w-14 h-8 rounded-full peer-checked:bg-primary-600"></div>
                            <div class="dot absolute left-1 top-1 bg-white w-6 h-6 rounded-full transition peer-checked:translate-x-6"></div>
                        </div>
                    </label>
                    <a href="/validate" id="edit-prompt-btn" class="flex items-center gap-2 px-3 py-1.5 text-xs font-medium text-slate-600 dark:text-slate-300 bg-white dark:bg-slate-700 hover:bg-slate-50 dark:hover:bg-slate-600 rounded-md shadow-sm border border-slate-200 dark:border-slate-600">
                        <i data-lucide="edit-3" class="w-3.5 h-3.5"></i>
                        Edit Prompt
                    </a>
                </div>


                <!-- Main Content Area -->
                <div class="relative min-h-[400px]">
                    <div id="news-loader"
                        class="absolute inset-0 bg-slate-50/80 dark:bg-slate-950/80 backdrop-blur-sm flex justify-center items-center z-40 hidden">
                        <div class="flex flex-col items-center gap-4">
                            <i data-lucide="refresh-cw" class="w-12 h-12 animate-spin text-primary-500"></i>
                            <p class="text-slate-600 dark:text-slate-300 font-medium">Scanning the latest headlines...
                            </p>
                        </div>
                    </div>
                    <div id="news-error"
                        class="text-center text-red-500 p-4 mb-4 bg-red-500/10 rounded-lg border border-red-500/30 hidden">
                    </div>
                    <div id="news-articles-container" class="space-y-4">
                        <div id="initial-fetch-container" class="text-center py-20">
                            <button id="fetch-content-btn" class="bg-primary-600 text-white px-6 py-3 rounded-lg hover:bg-primary-700 transition duration-300 font-semibold text-lg">
                                Click to Fetch News
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        
        <!-- Custom Search Modal -->
        <div id="custom-search-modal" class="fixed inset-0 bg-black/60 backdrop-blur-sm z-[51] hidden flex items-center justify-center p-4">
             <div class="bg-white dark:bg-slate-900 rounded-xl shadow-2xl w-full max-w-2xl">
                <div class="flex justify-between items-center p-4 border-b border-slate-200 dark:border-slate-800">
                    <h2 class="text-lg font-semibold text-slate-800 dark:text-white">News Filters & Search</h2>
                     <button id="close-search-modal-btn" class="p-2 rounded-full hover:bg-slate-100 dark:hover:bg-slate-800">
                        <i data-lucide="x" class="w-5 h-5 text-slate-500"></i>
                    </button>
                </div>
                <div class="p-6 space-y-6">
                    <!-- Prompt Section -->
                    <div class="text-center">
                        <button id="use-prompt-btn" class="w-full flex items-center justify-center gap-2 bg-purple-100 hover:bg-purple-200 dark:bg-purple-500/20 dark:hover:bg-purple-500/30 text-purple-700 dark:text-purple-300 px-4 py-2.5 rounded-lg font-semibold text-sm transition-colors">
                            <i data-lucide="wand-2" class="w-4 h-4"></i>
                            Generate Filters with AI
                        </button>
                    </div>
                    <div id="prompt-container" class="hidden space-y-2">
                        <label for="prompt-textarea" class="block text-sm font-medium text-slate-700 dark:text-slate-200">Your Prompt</label>
                        <textarea id="prompt-textarea" placeholder="e.g., 'Find me news about how luxury brands use scarcity to drive sales'" class="w-full h-24 p-2 bg-slate-100 dark:bg-slate-800 rounded-md border border-slate-300 dark:border-slate-700 focus:ring-2 focus:ring-purple-500 focus:outline-none"></textarea>
                        <button id="generate-filters-btn" class="w-full flex items-center justify-center gap-2 bg-purple-600 hover:bg-purple-700 text-white px-4 py-2.5 rounded-lg font-semibold text-sm transition-colors" data-icon="wand-2" data-original-text="Generate Filters">
                            <span class="btn-icon"><i data-lucide="wand-2" class="w-4 h-4"></i></span>
                            <span class="btn-text">Generate Filters</span>
                        </button>
                    </div>
        
                    <!-- Divider -->
                    <div class="relative flex py-1 items-center">
                        <div class="flex-grow border-t border-slate-200 dark:border-slate-700"></div>
                        <span class="flex-shrink mx-4 text-xs text-slate-400 dark:text-slate-500 uppercase">Or</span>
                        <div class="flex-grow border-t border-slate-200 dark:border-slate-700"></div>
                    </div>
        
                    <!-- Manual Filters Section -->
                    <div id="manual-filters-container" class="space-y-6">
                        <div>
                            <label for="add-keyword-input" class="block text-sm font-medium text-slate-700 dark:text-slate-200 mb-2">Keywords</label>
                            <div class="bg-slate-100 dark:bg-slate-800 border border-slate-300 dark:border-slate-700 rounded-lg p-2 flex flex-wrap gap-2 items-center">
                                <div id="keywords-container" class="flex flex-wrap gap-2">
                                    <!-- Keyword bubbles will be injected here -->
                                </div>
                                <input type="text" id="add-keyword-input" placeholder="Type a keyword..." class="flex-grow bg-transparent focus:outline-none text-sm p-1">
                                <button id="add-keyword-btn" class="flex-shrink-0 bg-indigo-600 hover:bg-indigo-700 text-white text-xs font-bold px-3 py-1 rounded-md">Add</button>
                            </div>
                            <p class="text-xs text-slate-400 mt-1">Press Enter or click 'Add' to include a keyword.</p>
                        </div>
                        
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-slate-200 mb-2">News Within</label>
                                <select id="date-filter-select" class="w-full p-2 bg-slate-100 dark:bg-slate-800 rounded-md border border-slate-300 dark:border-slate-700 focus:ring-2 focus:ring-primary-500 focus:outline-none">
                                    <option value="1">Last 24 hours</option>
                                    <option value="3">Last 3 days</option>
                                    <option value="7">Last 7 days</option>
                                    <option value="14">Last 2 weeks</option>
                                    <option value="31" selected>Last month</option>
                                </select>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-slate-200 mb-2">Sort By</label>
                                <div id="sort-by-container" class="flex items-center gap-4">
                                    <label for="sort-rel" class="flex items-center gap-2 cursor-pointer">
                                        <input type="radio" id="sort-rel" name="sort_by" value="rel" checked class="w-4 h-4 text-primary-600 focus:ring-primary-500">
                                        <span class="text-sm text-slate-700 dark:text-slate-300">Relevancy</span>
                                    </label>
                                    <label for="sort-date" class="flex items-center gap-2 cursor-pointer">
                                        <input type="radio" id="sort-date" name="sort_by" value="date" class="w-4 h-4 text-primary-600 focus:ring-primary-500">
                                        <span class="text-sm text-slate-700 dark:text-slate-300">Date</span>
                                    </label>
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-slate-200 mb-2">Search In</label>
                                <div id="keyword-loc-container" class="flex items-center gap-4">
                                    <label for="loc-body" class="flex items-center gap-2 cursor-pointer">
                                        <input type="radio" id="loc-body" name="keyword_loc" value="body" checked class="w-4 h-4 text-primary-600 focus:ring-primary-500">
                                        <span class="text-sm text-slate-700 dark:text-slate-300">Body</span>
                                    </label>
                                    <label for="loc-title" class="flex items-center gap-2 cursor-pointer">
                                        <input type="radio" id="loc-title" name="keyword_loc" value="title" class="w-4 h-4 text-primary-600 focus:ring-primary-500">
                                        <span class="text-sm text-slate-700 dark:text-slate-300">Title</span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-slate-700 dark:text-slate-200 mb-2">Categories</label>
                            <div id="search-category-container" class="grid grid-cols-2 sm:grid-cols-4 gap-2">
                                <label for="cat-none" class="col-span-full flex items-center gap-2 p-2 rounded-md border-2 border-slate-300 dark:border-slate-700 has-[:checked]:border-primary-500 has-[:checked]:bg-primary-50 dark:has-[:checked]:bg-primary-500/10 cursor-pointer">
                                    <input type="checkbox" id="cat-none" name="search_category" value="none" class="w-4 h-4 text-primary-600 bg-slate-100 border-slate-300 rounded focus:ring-primary-500">
                                    <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">None (Search All Categories)</span>
                                </label>
                                <% const categories = ["business", "technology", "entertainment", "general", "health", "science", "sports"]; %>
                                <% categories.forEach(cat => { %>
                                    <label for="cat-<%= cat %>" class="flex items-center gap-2 p-2 rounded-md border border-slate-300 dark:border-slate-700 has-[:checked]:bg-primary-50 dark:has-[:checked]:bg-primary-500/10 has-[:checked]:border-primary-500 cursor-pointer">
                                        <input type="checkbox" id="cat-<%= cat %>" name="search_category" value="<%= cat %>" class="w-4 h-4 text-primary-600 bg-slate-100 border-slate-300 rounded focus:ring-primary-500">
                                        <span class="text-sm text-slate-700 dark:text-slate-300 capitalize"><%= cat %></span>
                                    </label>
                                <% }); %>
                            </div>
                             <p class="text-xs text-slate-400 mt-1">Select 'None' for broader results across all categories.</p>
                        </div>
                    </div>
                </div>
                <div class="p-4 border-t border-slate-200 dark:border-slate-700 flex items-center gap-3">
                    <button id="reset-search-btn" title="Reset Filters" class="flex-shrink-0 p-2.5 rounded-lg bg-slate-100 hover:bg-slate-200 dark:bg-slate-800 dark:hover:bg-slate-700">
                        <i data-lucide="rotate-ccw" class="w-5 h-5 text-slate-600 dark:text-slate-300"></i>
                    </button>
                    <button id="execute-search-btn" class="w-full flex items-center justify-center gap-2 bg-primary-600 hover:bg-primary-700 text-white px-6 py-2.5 rounded-lg font-semibold">
                        <i data-lucide="search" class="w-5 h-5"></i>
                        Apply Filters & Search
                    </button>
                </div>
            </div>
        </div>

        <!-- Prompt Update Loader Modal -->
        <div id="prompt-update-loader-modal" class="fixed inset-0 bg-slate-900/70 backdrop-blur-sm z-[60] hidden flex items-center justify-center p-4">
            <div class="flex flex-col items-center gap-4 text-white">
                <div class="w-16 h-16 border-4 border-dashed rounded-full animate-spin border-secondary-500"></div>
                <h2 class="text-2xl font-bold mt-4">Updating AI prompt...</h2>
                <p class="text-slate-300">The AI is learning your preferences.</p>
            </div>
        </div>

        <!-- Story Generation Loader Modal -->
        <div id="story-loader-modal" class="fixed inset-0 bg-slate-900/70 backdrop-blur-sm z-[60] hidden flex items-center justify-center p-4">
            <div class="flex flex-col items-center gap-4 text-white">
                <div class="w-16 h-16 border-4 border-dashed rounded-full animate-spin border-primary-500"></div>
                <h2 class="text-2xl font-bold mt-4">Generating Your Viral Script...</h2>
                <p id="generation-status-text" class="text-slate-300 h-6"></p>
            </div>
        </div>
        
        <!-- Framework Selection Modal -->
        <div id="framework-select-modal" class="fixed inset-0 bg-black/60 backdrop-blur-sm z-[70] hidden flex items-center justify-center p-4">
            <div class="bg-white dark:bg-slate-900 rounded-xl shadow-2xl w-full max-w-md">
                <div class="flex justify-between items-center p-4 border-b border-slate-200 dark:border-slate-800">
                    <h2 class="text-lg font-semibold text-slate-800 dark:text-white">Select a Framework</h2>
                    <button id="close-framework-select-modal-btn" class="p-2 rounded-full hover:bg-slate-100 dark:hover:bg-slate-800">
                        <i data-lucide="x" class="w-5 h-5 text-slate-500"></i>
                    </button>
                </div>
                <div id="framework-options-container" class="p-6 max-h-[60vh] overflow-y-auto">
                    <!-- Framework options will be loaded here by news.js -->
                </div>
            </div>
        </div>

        <!-- Graceful Error Modal -->
        <div id="error-modal" class="fixed inset-0 bg-black/60 backdrop-blur-sm z-[80] hidden flex items-center justify-center p-4">
            <div class="bg-white dark:bg-slate-900 rounded-xl shadow-2xl w-full max-w-md text-center p-6">
                <div id="general-error-content">
                    <i data-lucide="alert-triangle" class="w-16 h-16 text-red-500 mx-auto"></i>
                    <h2 class="text-xl font-bold text-slate-800 dark:text-white mt-4">Something Went Wrong</h2>
                    <p class="mt-2 text-slate-500 dark:text-slate-400">Please check the console for more details (F12 &gt; Console).</p>
                </div>
                <div id="model-busy-content" class="hidden">
                    <i data-lucide="bot" class="w-16 h-16 text-yellow-500 mx-auto"></i>
                    <h2 class="text-xl font-bold text-slate-800 dark:text-white mt-4">Oops! Model Is Busy</h2>
                    <p class="mt-2 text-slate-500 dark:text-slate-400">This is not your fault. The AI is currently overloaded. Please try again in a few seconds.</p>
                </div>
                <button id="close-error-modal-btn" class="mt-6 w-full bg-primary-600 hover:bg-primary-700 text-white px-4 py-2.5 rounded-lg font-semibold">Close</button>
            </div>
        </div>


        <script src="/js/news.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                // Initialize Lucide Icons
                lucide.createIcons();

                // --- Theme Toggler ---
                const themeToggle = document.getElementById('theme-toggle');
                const htmlEl = document.documentElement;

                themeToggle.addEventListener('click', () => {
                    const isDark = htmlEl.classList.toggle('dark');
                    localStorage.setItem('theme', isDark ? 'dark' : 'light');
                    lucide.createIcons();
                });

                // --- Mobile Sidebar Logic ---
                const mobileMenuButton = document.getElementById('mobile-menu-button');
                const sidebar = document.getElementById('sidebar');
                const sidebarCloseButton = document.getElementById('sidebar-close-button');
                const sidebarOverlay = document.getElementById('sidebar-overlay');

                const openSidebar = () => {
                    sidebar.classList.remove('-translate-x-full');
                    sidebarOverlay.classList.remove('hidden');
                };

                const closeSidebar = () => {
                    sidebar.classList.add('-translate-x-full');
                    sidebarOverlay.classList.add('hidden');
                };

                mobileMenuButton.addEventListener('click', openSidebar);
                sidebarCloseButton.addEventListener('click', closeSidebar);
                sidebarOverlay.addEventListener('click', closeSidebar);
            });
        </script>

        <%- include('partials/footer') %>
