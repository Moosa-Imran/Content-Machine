<!DOCTYPE html>
<html lang="en" class="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Theme Setup Before Page Loads -->
    <script>
        (function () {
            const theme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            if (theme === 'dark') {
                document.documentElement.classList.add('dark');
            }
        })();
    </script>

    <!-- Tailwind Custom Theme -->
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#eff6ff',
                            100: '#dbeafe',
                            200: '#bfdbfe',
                            300: '#93c5fd',
                            400: '#60a5fa',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                            800: '#1e40af',
                            900: '#1e3a8a',
                            950: '#172554',
                        },
                    },
                },
            },
        }
    </script>

    <!-- Styles -->
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        *, *::before, *::after {
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
        }
        ::-webkit-scrollbar {
            width: 6px;
        }
        ::-webkit-scrollbar-track {
            background: transparent;
        }
        ::-webkit-scrollbar-thumb {
            background-color: rgba(156, 163, 175, 0.5);
            border-radius: 10px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background-color: rgba(156, 163, 175, 0.7);
        }
        body {
            background-color: #f8fafc;
        }
        .dark body {
            background-color: #020617;
            background-image: radial-gradient(ellipse at top, rgba(59, 130, 246, 0.15), transparent 60%);
        }
    </style>
</head>
<body class="text-slate-800 dark:text-slate-200">

    <div class="min-h-screen p-4 sm:p-6 lg:p-8">
        <!-- Header -->
        <header class="max-w-7xl mx-auto mb-8">
            <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
                <div>
                    <h1 class="text-3xl font-bold bg-gradient-to-r from-teal-500 to-indigo-500 dark:from-teal-400 dark:to-indigo-400 bg-clip-text text-transparent">Saved Stories</h1>
                    <p class="mt-1 text-slate-500 dark:text-slate-400">A repository of all generated and saved content.</p>
                </div>
                <div class="flex items-center gap-4">
                    <a href="/logout" class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-red-600 dark:text-red-400 bg-red-500/10 hover:bg-red-500/20 rounded-lg focus:outline-none">
                        <i data-lucide="log-out" class="w-4 h-4"></i>
                        Logout
                    </a>
                    <button id="theme-toggle" class="p-2 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800">
                        <i data-lucide="sun" class="w-5 h-5 block dark:hidden"></i>
                        <i data-lucide="moon" class="w-5 h-5 hidden dark:block"></i>
                    </button>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="max-w-7xl mx-auto">
            <div class="bg-white dark:bg-slate-900/50 rounded-2xl shadow-lg border border-slate-200 dark:border-slate-800 overflow-hidden">
                <div class="overflow-x-auto table-scrollbar">
                    <table class="w-full text-sm text-left">
                        <thead class="bg-slate-50 dark:bg-slate-800/50 text-xs text-slate-500 dark:text-slate-400 uppercase tracking-wider">
                            <tr>
                                <th class="px-6 py-4 font-semibold">Sr.</th>
                                <th class="px-6 py-4 font-semibold">Date</th>
                                <th class="px-6 py-4 font-semibold">Title</th>
                                <th class="px-6 py-4 font-semibold">Transcript</th>
                                <th class="px-6 py-4 font-semibold">IG Description</th>
                                <th class="px-6 py-4 font-semibold">Hashtags</th>
                                <th class="px-6 py-4 font-semibold text-center">Audio</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-200 dark:divide-slate-800">
                            <% if (stories && stories.length > 0) { %>
                                <% stories.forEach((story, index) => { %>
                                    <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors">
                                        <td class="px-6 py-4 text-slate-400 dark:text-slate-500"><%= index + 1 %></td>
                                        <td class="px-6 py-4 text-slate-500 dark:text-slate-400"><%= new Date(story.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></td>
                                        <td class="px-6 py-4 font-semibold"><%= story.title %></td>
                                        <td class="px-6 py-4 max-w-xs">
                                            <div class="expandable-text" data-full-text="<%= story.transcript %>">
                                                <p class="text-slate-500 dark:text-slate-400 truncated-text"></p>
                                                <button class="text-xs font-semibold text-primary-600 dark:text-primary-400 hover:underline show-more-btn hidden">Show More</button>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 max-w-xs">
                                            <div class="expandable-text" data-full-text="<%= story.igDescription %>">
                                                <p class="text-slate-500 dark:text-slate-400 truncated-text"></p>
                                                <button class="text-xs font-semibold text-primary-600 dark:text-primary-400 hover:underline show-more-btn hidden">Show More</button>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="flex flex-wrap gap-1.5">
                                                <% (story.hashtags || []).forEach(tag => { %>
                                                    <span class="text-xs bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 px-2 py-1 rounded-full"><%= tag %></span>
                                                <% }); %>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 text-center">
                                            <button class="play-audio-btn p-2 rounded-full bg-teal-500/10 hover:bg-teal-500/20 text-teal-600 dark:text-teal-400" data-audio-src="<%= story.audioUrl %>">
                                                <i data-lucide="play-circle" class="w-6 h-6"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7" class="text-center py-12 text-slate-500 dark:text-slate-400">
                                        <i data-lucide="folder-search" class="w-12 h-12 mx-auto mb-2"></i>
                                        No stories found.
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>

    <!-- Audio Modal -->
    <div id="audio-modal" class="fixed inset-0 bg-black/60 backdrop-blur-sm z-50 hidden flex items-center justify-center p-4">
        <div class="bg-white dark:bg-slate-900 rounded-xl shadow-2xl w-full max-w-md p-6">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-semibold">Now Playing</h3>
                <button id="close-audio-modal-btn" class="p-2 rounded-full hover:bg-slate-100 dark:hover:bg-slate-800">
                    <i data-lucide="x" class="w-5 h-5 text-slate-500"></i>
                </button>
            </div>
            <audio id="audio-player" controls class="w-full"></audio>
        </div>
    </div>

    <script src="/js/stories.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            lucide.createIcons();

            const themeToggle = document.getElementById('theme-toggle');
            const htmlEl = document.documentElement;

            themeToggle.addEventListener('click', () => {
                htmlEl.classList.toggle('dark');
                localStorage.setItem('theme', htmlEl.classList.contains('dark') ? 'dark' : 'light');
                lucide.createIcons();
            });
        });
    </script>
</body>
</html>
