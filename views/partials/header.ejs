<body class="bg-slate-50 dark:bg-slate-950 text-slate-800 dark:text-slate-200">

    <div id="sidebar-overlay" class="fixed inset-0 bg-black/60 z-30 md:hidden hidden"></div>

    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <aside id="sidebar" class="fixed top-0 left-0 h-full w-64 bg-white dark:bg-slate-900/70 backdrop-blur-lg border-r border-slate-200 dark:border-slate-800 transition-transform duration-300 ease-in-out z-40 md:translate-x-0 -translate-x-full">
            <div class="flex items-center justify-between h-20 border-b border-slate-200 dark:border-slate-800 px-6">
                <a href="/" class="flex items-center gap-3">
                    <img src="https://storage.googleapis.com/msgsndr/9YMghAA74uMWC9r1DCA8/media/684c4fc8fbe6f491c182c144.png" alt="Logo" class="h-8 w-8">
                    <h1 class="text-xl font-bold text-slate-800 dark:text-white">Content Machine</h1>
                </a>
                 <button id="sidebar-close-button" class="md:hidden text-slate-500 dark:text-slate-400 hover:text-slate-800 dark:hover:text-white">
                    <i data-lucide="x" class="h-6 w-6"></i>
                </button>
            </div>
            <nav class="p-4 space-y-2">
                <a href="/" class="flex items-center px-4 py-2.5 text-sm font-medium text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800/50 rounded-lg">
                    <i data-lucide="layout-dashboard" class="h-5 w-5 mr-3"></i>
                    Dashboard
                </a>
                <a href="/reels" class="flex items-center px-4 py-2.5 text-sm font-medium text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800/50 rounded-lg">
                    <i data-lucide="video" class="h-5 w-5 mr-3"></i>
                    Viral Scripts
                </a>
                <a href="/breakdown" class="flex items-center px-4 py-2.5 text-sm font-medium text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800/50 rounded-lg">
                    <i data-lucide="brain" class="h-5 w-5 mr-3"></i>
                    Tactic Breakdowns
                </a>
                <a href="/sheet" class="flex items-center px-4 py-2.5 text-sm font-medium text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800/50 rounded-lg">
                    <i data-lucide="sheet" class="h-5 w-5 mr-3"></i>
                    Analyze Sheet
                </a>
                <a href="/news" class="flex items-center px-4 py-2.5 text-sm font-medium text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800/50 rounded-lg">
                    <i data-lucide="newspaper" class="h-5 w-5 mr-3"></i>
                    Industry News
                </a>
                <a href="/framework" class="flex items-center px-4 py-2.5 text-sm font-medium text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800/50 rounded-lg">
                    <i data-lucide="file-text" class="h-5 w-5 mr-3"></i>
                    Framework
                </a>
                <a href="https://saved-stories.fctoz.com" class="flex items-center px-4 py-2.5 text-sm font-medium text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800/50 rounded-lg">
                    <i data-lucide="book-open" class="h-5 w-5 mr-3"></i>
                    Saved Stories
                </a>
            </nav>
            <div class="absolute bottom-0 w-full p-4 border-t border-slate-200 dark:border-slate-800">
                <div class="flex items-center justify-between p-3 bg-slate-100 dark:bg-slate-800/50 rounded-lg">
                    <div class="flex items-center">
                        <div class="h-10 w-10 bg-primary-500 rounded-full flex items-center justify-center">
                            <i data-lucide="user" class="h-5 w-5 text-white"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-semibold"><%= typeof user !== 'undefined' && user ? user.username : 'Guest' %></p>
                            <p class="text-xs text-slate-500 dark:text-slate-400">Admin</p>
                        </div>
                    </div>
                    <% if (typeof user !== 'undefined' && user) { %>
                        <form action="/logout" method="POST" class="ml-2">
                            <button type="submit" class="p-1.5 rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700 text-slate-500 dark:text-slate-400 hover:text-red-600 dark:hover:text-red-400 transition-colors" title="Logout">
                                <i data-lucide="log-out" class="h-4 w-4"></i>
                            </button>
                        </form>
                    <% } %>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 md:ml-64 flex flex-col">
            <!-- Header/Navbar -->
            <header class="fixed top-0 left-0 md:left-64 right-0 h-20 bg-white/70 dark:bg-slate-950/70 backdrop-blur-lg border-b border-slate-200 dark:border-slate-800 z-30">
                <div class="flex items-center justify-between h-full px-6">
                    <!-- Mobile sidebar toggle -->
                    <button id="mobile-menu-button" class="md:hidden text-slate-600 dark:text-slate-300">
                        <i data-lucide="menu" class="h-6 w-6"></i>
                    </button>
                    <!-- Search bar (optional) -->
                    <div class="hidden md:flex items-center">
                        <div class="relative">
                            <i data-lucide="search" class="absolute left-3 top-1/2 -translate-y-1/2 h-5 w-5 text-slate-400"></i>
                            <input type="text" placeholder="Search tools..." class="w-64 pl-10 pr-4 py-2 text-sm bg-slate-100 dark:bg-slate-800 border border-transparent focus:border-primary-500 focus:ring-0 rounded-lg">
                        </div>
                    </div>
                    <!-- Right side icons -->
                    <div class="flex items-center space-x-4">
                        <button id="theme-toggle" class="p-2 rounded-full hover:bg-slate-100 dark:hover:bg-slate-800 text-slate-600 dark:text-slate-300">
                            <i data-lucide="sun" class="h-5 w-5 hidden dark:block"></i>
                            <i data-lucide="moon" class="h-5 w-5 block dark:hidden"></i>
                        </button>
                        <button class="p-2 rounded-full hover:bg-slate-100 dark:hover:bg-slate-800 text-slate-600 dark:text-slate-300 relative">
                            <i data-lucide="bell" class="h-5 w-5"></i>
                            <span class="absolute top-1.5 right-1.5 h-2 w-2 bg-red-500 rounded-full"></span>
                        </button>
                    </div>
                </div>
            </header>

            <!-- Small script to set the active nav link -->
            <script>
                document.addEventListener('DOMContentLoaded', () => {
                    const path = window.location.pathname;
                    const navLinks = document.querySelectorAll('aside nav a');
                    
                    const activeClasses = ['bg-primary-50', 'dark:bg-primary-500/10', 'text-primary-600', 'dark:text-primary-300', 'active-nav-glow', 'border-l-2', 'border-primary-500', 'dark:border-primary-400'];
                    const inactiveClasses = ['text-slate-600', 'dark:text-slate-400', 'hover:bg-slate-100', 'dark:hover:bg-slate-800/50'];

                    navLinks.forEach(link => {
                        const linkPath = new URL(link.href).pathname;
                        
                        // Reset classes
                        link.classList.remove(...activeClasses);
                        link.classList.add(...inactiveClasses);

                        // Apply active classes if path matches
                        if (path === linkPath || (path.startsWith(linkPath) && linkPath !== '/')) {
                           if(linkPath === '/' && path !== '/') return;
                            link.classList.add(...activeClasses);
                            link.classList.remove(...inactiveClasses);
                        }
                    });
                });
            </script>
