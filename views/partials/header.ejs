<body class="bg-slate-50 dark:bg-slate-950 text-slate-800 dark:text-slate-200">

    <div id="sidebar-overlay" class="fixed inset-0 bg-black/60 z-30 md:hidden hidden backdrop-blur-sm"></div>

    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <aside id="sidebar" class="fixed top-0 left-0 h-full w-64 bg-white/95 dark:bg-slate-900/95 backdrop-blur-xl border-r border-slate-200 dark:border-slate-800 transition-transform duration-300 ease-in-out z-40 md:translate-x-0 -translate-x-full shadow-2xl">
